  // Pagination config
  const pageSize = 8;
  let currentPage = 1;
  let currentCategory = 'all';

  // Filter products
  function filterProducts() {
    if (currentCategory === 'all') return mockProducts;
    return mockProducts.filter(p => p.category === currentCategory);
  }

  // Generate star rating
  function renderStars(rating) {
    const full = Math.floor(rating);
    const half = rating % 1 >= 0.5 ? 1 : 0;
    return '‚òÖ'.repeat(full) + (half ? '¬Ω' : '') + '‚òÜ'.repeat(5 - full - half);
  }

  // Render product card
  function renderProductCard(product) {
    const discount = Math.round((1 - product.price / product.original) * 100);
    return `
      <div class="sf-product-card" data-id="${product.id}">
        ${product.badge ? `<span class="sf-product-badge ${product.badgeType}">${product.badge}</span>` : ''}
        <div class="sf-product-image">
          <img src="${product.image}" alt="${product.name}" loading="lazy">
          <div class="sf-product-actions">
            <button class="sf-action-btn" onclick="addToCart(${product.id})">Add to Cart</button>
            <button class="sf-action-btn secondary">‚ô°</button>
          </div>
        </div>
        <div class="sf-product-info">
          <h3 class="sf-product-name">${product.name}</h3>
          <div class="sf-product-price">
            <span class="sf-price-current">$${product.price}</span>
            <span class="sf-price-original">$${product.original}</span>
            <span class="sf-price-discount">-${discount}%</span>
          </div>
          <div class="sf-product-rating">
            <span class="sf-rating-stars">${renderStars(product.rating)}</span>
            <span class="sf-rating-count">(${product.reviews.toLocaleString()})</span>
          </div>
        </div>
      </div>
    `;
  }

  // Render products list
  function renderProducts() {
    const filtered = filterProducts();
    const totalPages = Math.ceil(filtered.length / pageSize);
    const start = (currentPage - 1) * pageSize;
    const pageProducts = filtered.slice(start, start + pageSize);

    document.getElementById('sf-products-grid').innerHTML = pageProducts.map(renderProductCard).join('');
    renderPagination(totalPages, filtered.length);
  }

  // Render pagination
  function renderPagination(totalPages, total) {
    if (totalPages <= 1) {
      document.getElementById('sf-pagination').innerHTML = '';
      return;
    }

    let html = `<button class="sf-page-btn nav" onclick="goToPage(${currentPage - 1})" ${currentPage === 1 ? 'disabled' : ''}>‚Äπ Prev</button>`;

    for (let i = 1; i <= totalPages; i++) {
      if (i === 1 || i === totalPages || Math.abs(i - currentPage) <= 1) {
        html += `<button class="sf-page-btn ${i === currentPage ? 'active' : ''}" onclick="goToPage(${i})">${i}</button>`;
      } else if (Math.abs(i - currentPage) === 2) {
        html += `<span class="sf-page-btn" style="cursor:default">...</span>`;
      }
    }

    html += `<span class="sf-page-info">${total} items</span>`;
    html += `<button class="sf-page-btn nav" onclick="goToPage(${currentPage + 1})" ${currentPage === totalPages ? 'disabled' : ''}>Next ‚Ä∫</button>`;

    document.getElementById('sf-pagination').innerHTML = html;
  }

  // Go to page
  function goToPage(page) {
    const filtered = filterProducts();
    const totalPages = Math.ceil(filtered.length / pageSize);
    if (page < 1 || page > totalPages) return;
    currentPage = page;
    renderProducts();
    document.getElementById('sf-products').scrollIntoView({ behavior: 'smooth' });
  }

