{% stylesheet %}
  spz-pagination {
    margin-top: 40px !important;
  }

  spz-pagination > [role='container'] {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    height: auto;
    margin-top: -4px;
  }

  spz-pagination a[page-index] {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    margin: 4px 4px 0;
    font-size: 14px;
    line-height: 18px;
    color: var(--color-body-text);
    background-color: var(--color-body-bg);
    border-radius: 100%;
    border: 1px solid var(--color-border);
    transition: all 300ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
    text-decoration: none;
  }

  spz-pagination a[disabled],
  spz-pagination a[page-index='...'] {
    cursor: default;
    border: none;
  }

  spz-pagination a[disabled] {
    display: none;
  }

  spz-pagination a[active] {
    border-color: transparent;
    background-color: var(--color-primary-btn-bg);
    color: var(--color-primary-btn-text);
  }

  spz-pagination a[page-index='pre'],
  spz-pagination a[page-index='next'] {
    /* border-color: transparent; */
    color: var(--color-body-text);
  }

  spz-pagination a[page-index='pre'] {
    transform: rotate(-180deg);
  }

  spz-pagination a[page-index='next'] {
    transform: rotate(180deg);
  }

  @media (max-width: 959.98px) {
    spz-pagination a[page-index='pre'],
    spz-pagination a[page-index='next'] {
      background-color: var(--color-white);
      box-shadow: 0px 10px 40px var(--color-shadow);
    }

    spz-pagination a[page-index='pre'][disabled],
    spz-pagination a[page-index='next'][disabled] {
      color: var(--color-body-text-default);
    }
  }

  @media (min-width: 960px) {
    spz-pagination {
      margin-top: 80px !important;
    }
  }
  {% if shop.locale == 'ar-SA' %}
    spz-pagination a[page-index='pre'],spz-pagination a[page-index='next'] {
      transform: unset;
    }
  {% endif %}
{% endstylesheet %}
