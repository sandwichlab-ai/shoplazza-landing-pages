  function openProductDetail(productId) {
    const product = mockProducts.find(p => p.id === productId);
    if (!product) return;

    currentQuantity = 1;
    document.getElementById('sf-modal-content').innerHTML = renderProductDetail(product);
    document.getElementById('sf-modal-overlay').classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  // Close modal
  function closeProductDetail() {
    document.getElementById('sf-modal-overlay').classList.remove('active');
    document.body.style.overflow = '';
  }

