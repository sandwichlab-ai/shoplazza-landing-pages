  document.getElementById('sf-modal-close').addEventListener('click', closeProductDetail);
  document.getElementById('sf-modal-overlay').addEventListener('click', function(e) {
    if (e.target === this) closeProductDetail();
  });

  // Escape key to close modal
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') closeProductDetail();
  });

  // Add click event to product cards
  document.getElementById('sf-products-grid').addEventListener('click', function(e) {
    const card = e.target.closest('.sf-product-card');
    const actionBtn = e.target.closest('.sf-action-btn');

    // If clicked on action button, don't open detail
    if (actionBtn) return;

    if (card) {
      const productId = parseInt(card.dataset.id);
      openProductDetail(productId);
    }
  });

  // Initial render
  renderProducts();
