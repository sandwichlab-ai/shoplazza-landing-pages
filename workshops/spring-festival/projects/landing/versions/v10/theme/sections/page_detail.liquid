<style>
/* Lunar New Year Sale Landing Page - Ultra Premium Edition */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Playfair+Display:wght@700;800;900&display=swap');

* {
  box-sizing: border-box;
}

:root {
  --sf-red: #ff4757;
  --sf-gold: #ffd700;
  --sf-orange: #ff8c42;
  --sf-pink: #ff6b9d;
  --sf-dark: #0a0a14;
  --sf-dark-blue: #12122a;
}

.sf-landing {
  min-height: 100vh;
  background: linear-gradient(165deg, var(--sf-dark) 0%, var(--sf-dark-blue) 25%, #1a1035 50%, #0d1f3c 75%, var(--sf-dark) 100%);
  color: #fff;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  overflow-x: hidden;
  position: relative;
}

/* Animated background with floating particles */
.sf-landing::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(ellipse 600px 400px at 20% 20%, rgba(255, 71, 87, 0.2) 0%, transparent 60%),
    radial-gradient(ellipse 500px 500px at 80% 30%, rgba(255, 215, 0, 0.15) 0%, transparent 50%),
    radial-gradient(ellipse 400px 300px at 10% 80%, rgba(255, 140, 66, 0.12) 0%, transparent 50%),
    radial-gradient(ellipse 450px 350px at 90% 85%, rgba(255, 107, 157, 0.1) 0%, transparent 50%),
    radial-gradient(ellipse 300px 200px at 50% 50%, rgba(255, 215, 0, 0.08) 0%, transparent 40%);
  pointer-events: none;
  animation: backgroundPulse 10s ease-in-out infinite;
}

@keyframes backgroundPulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.02); }
}

/* Floating particles animation */
.sf-landing::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(3px 3px at 5% 5%, rgba(255,215,0,0.6), transparent),
    radial-gradient(2px 2px at 15% 25%, rgba(255,71,87,0.5), transparent),
    radial-gradient(3px 3px at 25% 15%, rgba(255,255,255,0.4), transparent),
    radial-gradient(2px 2px at 35% 85%, rgba(255,215,0,0.5), transparent),
    radial-gradient(3px 3px at 45% 45%, rgba(255,140,66,0.4), transparent),
    radial-gradient(2px 2px at 55% 75%, rgba(255,255,255,0.3), transparent),
    radial-gradient(3px 3px at 65% 35%, rgba(255,215,0,0.4), transparent),
    radial-gradient(2px 2px at 75% 65%, rgba(255,71,87,0.4), transparent),
    radial-gradient(3px 3px at 85% 15%, rgba(255,215,0,0.5), transparent),
    radial-gradient(2px 2px at 95% 95%, rgba(255,140,66,0.4), transparent);
  pointer-events: none;
  animation: floatingParticles 25s linear infinite;
}

@keyframes floatingParticles {
  0% { transform: translateY(0) rotate(0deg); opacity: 1; }
  50% { opacity: 0.7; }
  100% { transform: translateY(-150px) rotate(10deg); opacity: 1; }
}

/* Top Banner - Ultra Premium */
.sf-banner {
  background: linear-gradient(90deg, var(--sf-red) 0%, var(--sf-orange) 20%, var(--sf-gold) 40%, var(--sf-orange) 60%, var(--sf-red) 80%, var(--sf-pink) 100%);
  background-size: 300% 100%;
  padding: 18px 20px;
  text-align: center;
  font-size: 14px;
  letter-spacing: 2px;
  position: relative;
  overflow: hidden;
  animation: bannerGradient 6s ease infinite;
  box-shadow: 0 6px 30px rgba(255,71,87,0.4), 0 2px 10px rgba(255,215,0,0.3);
}

@keyframes bannerGradient {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.sf-banner::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 300%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent, rgba(255,255,255,0.2), transparent);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(0); }
  100% { transform: translateX(33%); }
}

.sf-banner::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(255,255,255,0.15) 0%, transparent 50%, rgba(0,0,0,0.1) 100%);
  pointer-events: none;
}

.sf-banner-text {
  color: #fff;
  font-weight: 800;
  text-transform: uppercase;
  position: relative;
  z-index: 1;
  text-shadow: 0 2px 8px rgba(0,0,0,0.3), 0 0 20px rgba(255,215,0,0.3);
  display: inline-flex;
  align-items: center;
  gap: 16px;
  animation: textGlow 2s ease-in-out infinite;
}

@keyframes textGlow {
  0%, 100% { text-shadow: 0 2px 8px rgba(0,0,0,0.3), 0 0 20px rgba(255,215,0,0.3); }
  50% { text-shadow: 0 2px 8px rgba(0,0,0,0.3), 0 0 30px rgba(255,215,0,0.5); }
}

.sf-banner-text::before,
.sf-banner-text::after {
  content: '‚ú®';
  font-size: 18px;
  animation: sparkle 1.5s ease infinite;
}

.sf-banner-text::after {
  content: 'üéä';
  animation-delay: 0.5s;
}

@keyframes sparkle {
  0%, 100% { transform: translateY(0) scale(1); opacity: 1; }
  50% { transform: translateY(-4px) scale(1.2); opacity: 0.8; }
}

/* Decorative Elements - Ultra Premium Lanterns */
.sf-lanterns {
  position: absolute;
  top: 80px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  font-size: 52px;
  opacity: 0.7;
  pointer-events: none;
  filter: drop-shadow(0 0 40px rgba(255,215,0,0.7)) drop-shadow(0 0 20px rgba(255,71,87,0.5));
  z-index: 5;
}

.sf-lanterns span {
  animation: lanternFloat 4s ease-in-out infinite;
  transition: transform 0.3s ease;
}

.sf-lanterns span:nth-child(1) { animation-delay: 0s; filter: drop-shadow(0 0 25px rgba(255,215,0,0.8)); }
.sf-lanterns span:nth-child(2) { animation-delay: 0.6s; filter: drop-shadow(0 0 25px rgba(255,71,87,0.8)); }
.sf-lanterns span:nth-child(3) { animation-delay: 1.2s; filter: drop-shadow(0 0 25px rgba(255,215,0,0.8)); }
.sf-lanterns span:nth-child(4) { animation-delay: 1.8s; filter: drop-shadow(0 0 25px rgba(255,71,87,0.8)); }
.sf-lanterns span:nth-child(5) { animation-delay: 2.4s; filter: drop-shadow(0 0 25px rgba(255,215,0,0.8)); }

@keyframes lanternFloat {
  0%, 100% { transform: translateY(0) rotate(-8deg) scale(1); }
  25% { transform: translateY(-10px) rotate(-2deg) scale(1.05); }
  50% { transform: translateY(-20px) rotate(8deg) scale(1); }
  75% { transform: translateY(-10px) rotate(2deg) scale(1.05); }
}

/* Hero Section - Ultra Premium */
.sf-hero {
  position: relative;
  min-height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 140px 20px 120px;
  text-align: center;
}

.sf-hero::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 800px;
  height: 800px;
  background: radial-gradient(circle, rgba(255,215,0,0.1) 0%, transparent 60%);
  pointer-events: none;
  animation: heroGlow 6s ease-in-out infinite;
}

@keyframes heroGlow {
  0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.8; }
  50% { transform: translate(-50%, -50%) scale(1.2); opacity: 1; }
}

.sf-hero-content {
  max-width: 800px;
  position: relative;
  z-index: 1;
  animation: fadeInUp 1.2s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(50px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Year Badge - Ultra Premium */
.sf-year-badge {
  display: inline-block;
  background: linear-gradient(135deg, var(--sf-red) 0%, var(--sf-orange) 30%, var(--sf-gold) 50%, var(--sf-orange) 70%, var(--sf-red) 100%);
  background-size: 300% 300%;
  color: #fff;
  padding: 14px 38px;
  border-radius: 60px;
  font-size: 13px;
  font-weight: 800;
  margin-bottom: 36px;
  box-shadow:
    0 10px 40px rgba(255,71,87,0.5),
    0 0 80px rgba(255,215,0,0.3),
    inset 0 1px 0 rgba(255,255,255,0.3);
  text-transform: uppercase;
  letter-spacing: 3px;
  animation: badgeGlow 4s ease-in-out infinite;
  border: 2px solid rgba(255,255,255,0.25);
  position: relative;
  overflow: hidden;
}

.sf-year-badge::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  animation: badgeShine 3s infinite;
}

@keyframes badgeShine {
  0% { left: -100%; }
  100% { left: 100%; }
}

@keyframes badgeGlow {
  0%, 100% {
    background-position: 0% 50%;
    box-shadow: 0 10px 40px rgba(255,71,87,0.5), 0 0 80px rgba(255,215,0,0.3), inset 0 1px 0 rgba(255,255,255,0.3);
  }
  50% {
    background-position: 100% 50%;
    box-shadow: 0 15px 50px rgba(255,215,0,0.6), 0 0 100px rgba(255,71,87,0.4), inset 0 1px 0 rgba(255,255,255,0.4);
  }
}

/* Main Title - Ultra Premium */
.sf-title {
  margin: 0 0 28px 0;
  line-height: 1.05;
}

.sf-title-main {
  display: block;
  font-size: 90px;
  font-weight: 900;
  font-family: 'Playfair Display', 'Inter', serif;
  background: linear-gradient(135deg, #fff 0%, var(--sf-gold) 20%, #fff 40%, var(--sf-orange) 60%, #fff 80%, var(--sf-gold) 100%);
  background-size: 300% 300%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -2px;
  animation: titleShine 5s ease-in-out infinite;
  filter: drop-shadow(0 6px 30px rgba(255,215,0,0.4));
  position: relative;
}

@keyframes titleShine {
  0%, 100% { background-position: 0% 50%; filter: drop-shadow(0 6px 30px rgba(255,215,0,0.4)); }
  50% { background-position: 100% 50%; filter: drop-shadow(0 8px 40px rgba(255,215,0,0.6)); }
}

.sf-title-sub {
  display: block;
  font-size: 28px;
  font-weight: 600;
  color: rgba(255,255,255,0.95);
  margin-top: 20px;
  letter-spacing: 1.5px;
  text-shadow: 0 2px 30px rgba(0,0,0,0.4);
  animation: subtitleFade 3s ease-in-out infinite;
}

@keyframes subtitleFade {
  0%, 100% { opacity: 0.95; }
  50% { opacity: 1; }
}

/* Subtitle - Ultra Premium */
.sf-subtitle {
  font-size: 19px;
  color: rgba(255,255,255,0.8);
  margin: 0 0 52px 0;
  letter-spacing: 0.8px;
  line-height: 1.8;
  max-width: 550px;
  margin-left: auto;
  margin-right: auto;
  text-shadow: 0 2px 15px rgba(0,0,0,0.3);
}

/* Discount Display - Ultra Premium */
.sf-discount {
  margin-bottom: 56px;
  perspective: 1000px;
}

.sf-discount-box {
  display: inline-flex;
  align-items: center;
  gap: 28px;
  background: linear-gradient(145deg, rgba(255,71,87,0.2) 0%, rgba(255,140,66,0.15) 50%, rgba(255,215,0,0.1) 100%);
  padding: 32px 64px;
  border-radius: 28px;
  border: 2px solid rgba(255,215,0,0.3);
  backdrop-filter: blur(25px);
  box-shadow:
    0 25px 70px rgba(255,71,87,0.25),
    0 0 100px rgba(255,215,0,0.15),
    inset 0 1px 0 rgba(255,255,255,0.15),
    inset 0 -1px 0 rgba(0,0,0,0.1);
  position: relative;
  overflow: hidden;
  animation: discountPulse 4s ease-in-out infinite;
  transform-style: preserve-3d;
}

.sf-discount-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 300%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent, rgba(255,215,0,0.1), transparent);
  animation: discountShimmer 4s infinite;
}

.sf-discount-box::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(255,255,255,0.1), transparent);
  border-radius: 28px 28px 0 0;
  pointer-events: none;
}

@keyframes discountShimmer {
  0% { transform: translateX(0); }
  100% { transform: translateX(33%); }
}

@keyframes discountPulse {
  0%, 100% { transform: scale(1) rotateX(0deg); }
  50% { transform: scale(1.03) rotateX(2deg); }
}

.sf-discount-num {
  font-size: 96px;
  font-weight: 900;
  font-family: 'Playfair Display', serif;
  background: linear-gradient(135deg, var(--sf-red) 0%, var(--sf-gold) 30%, #fff 50%, var(--sf-gold) 70%, var(--sf-orange) 100%);
  background-size: 300% 300%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
  animation: discountNumShine 3s ease-in-out infinite;
  filter: drop-shadow(0 6px 25px rgba(255,215,0,0.5));
  position: relative;
  z-index: 1;
}

@keyframes discountNumShine {
  0%, 100% { background-position: 0% 50%; filter: drop-shadow(0 6px 25px rgba(255,215,0,0.5)); }
  50% { background-position: 100% 50%; filter: drop-shadow(0 8px 35px rgba(255,71,87,0.6)); }
}

.sf-discount-text {
  text-align: left;
  position: relative;
  z-index: 1;
}

.sf-discount-off {
  font-size: 40px;
  font-weight: 900;
  background: linear-gradient(135deg, var(--sf-red) 0%, var(--sf-gold) 50%, var(--sf-orange) 100%);
  background-size: 200% 200%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 4px;
  animation: offShine 3s ease-in-out infinite;
}

@keyframes offShine {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.sf-discount-desc {
  font-size: 15px;
  color: rgba(255,255,255,0.75);
  margin-top: 8px;
  letter-spacing: 1px;
  text-shadow: 0 1px 5px rgba(0,0,0,0.3);
}

/* Countdown - Ultra Premium */
.sf-countdown {
  margin-bottom: 56px;
}

.sf-countdown-title {
  font-size: 14px;
  color: rgba(255,255,255,0.8);
  margin-bottom: 24px;
  letter-spacing: 3px;
  text-transform: uppercase;
  font-weight: 700;
  text-shadow: 0 2px 10px rgba(0,0,0,0.3);
  position: relative;
  display: inline-block;
}

.sf-countdown-title::before,
.sf-countdown-title::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 40px;
  height: 2px;
  background: linear-gradient(90deg, transparent, rgba(255,215,0,0.5), transparent);
}

.sf-countdown-title::before {
  right: 100%;
  margin-right: 15px;
}

.sf-countdown-title::after {
  left: 100%;
  margin-left: 15px;
}

.sf-timer {
  display: flex;
  justify-content: center;
  gap: 14px;
}

.sf-timer-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sf-timer-num {
  background: linear-gradient(145deg, rgba(255,255,255,0.15) 0%, rgba(255,255,255,0.05) 100%);
  border: 2px solid rgba(255,215,0,0.25);
  padding: 20px 24px;
  border-radius: 20px;
  font-size: 40px;
  font-weight: 800;
  min-width: 88px;
  color: #fff;
  backdrop-filter: blur(25px);
  box-shadow:
    0 15px 50px rgba(0,0,0,0.25),
    0 0 30px rgba(255,215,0,0.1),
    inset 0 1px 0 rgba(255,255,255,0.15);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  text-shadow: 0 2px 10px rgba(0,0,0,0.3);
}

.sf-timer-num::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(255,255,255,0.15), transparent);
  border-radius: 20px 20px 0 0;
}

.sf-timer-num::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 10%;
  right: 10%;
  height: 3px;
  background: linear-gradient(90deg, transparent, rgba(255,215,0,0.5), transparent);
  border-radius: 2px;
}

.sf-timer-item:hover .sf-timer-num {
  transform: translateY(-6px) scale(1.05);
  box-shadow:
    0 20px 60px rgba(255,71,87,0.35),
    0 0 50px rgba(255,215,0,0.2),
    inset 0 1px 0 rgba(255,255,255,0.2);
  border-color: rgba(255,215,0,0.5);
}

.sf-timer-label {
  font-size: 12px;
  margin-top: 12px;
  color: rgba(255,255,255,0.7);
  text-transform: uppercase;
  letter-spacing: 2px;
  font-weight: 700;
}

.sf-timer-sep {
  font-size: 40px;
  font-weight: 800;
  background: linear-gradient(180deg, var(--sf-gold), var(--sf-red));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-top: 20px;
  animation: sepPulse 1s ease-in-out infinite;
  filter: drop-shadow(0 2px 8px rgba(255,215,0,0.4));
}

@keyframes sepPulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.5; transform: scale(0.9); }
}

/* Feature Tags - Ultra Premium */
.sf-features {
  display: flex;
  justify-content: center;
  gap: 18px;
  margin-bottom: 56px;
  flex-wrap: wrap;
}

.sf-feature {
  display: flex;
  align-items: center;
  gap: 14px;
  background: linear-gradient(145deg, rgba(255,255,255,0.12) 0%, rgba(255,255,255,0.05) 100%);
  padding: 16px 32px;
  border-radius: 60px;
  font-size: 15px;
  font-weight: 600;
  border: 1px solid rgba(255,215,0,0.15);
  backdrop-filter: blur(25px);
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: default;
  box-shadow: 0 8px 30px rgba(0,0,0,0.15), inset 0 1px 0 rgba(255,255,255,0.1);
  position: relative;
  overflow: hidden;
}

.sf-feature::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,215,0,0.15), transparent);
  transition: left 0.5s ease;
}

.sf-feature:hover::before {
  left: 100%;
}

.sf-feature:hover {
  background: linear-gradient(145deg, rgba(255,71,87,0.2) 0%, rgba(255,215,0,0.15) 100%);
  transform: translateY(-6px) scale(1.05);
  border-color: rgba(255,215,0,0.4);
  box-shadow: 0 20px 50px rgba(255,71,87,0.25), 0 0 40px rgba(255,215,0,0.15);
}

.sf-feature-icon {
  font-size: 22px;
  filter: drop-shadow(0 3px 8px rgba(0,0,0,0.3));
  animation: iconBounce 2s ease-in-out infinite;
}

.sf-feature:nth-child(1) .sf-feature-icon { animation-delay: 0s; }
.sf-feature:nth-child(2) .sf-feature-icon { animation-delay: 0.3s; }
.sf-feature:nth-child(3) .sf-feature-icon { animation-delay: 0.6s; }

@keyframes iconBounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-3px); }
}

/* CTA Button - Ultra Premium */
.sf-cta {
  display: inline-flex;
  align-items: center;
  gap: 14px;
  background: linear-gradient(135deg, var(--sf-red) 0%, var(--sf-orange) 25%, var(--sf-gold) 50%, var(--sf-orange) 75%, var(--sf-red) 100%);
  background-size: 300% 300%;
  color: #fff;
  text-decoration: none;
  padding: 24px 72px;
  border-radius: 70px;
  font-size: 19px;
  font-weight: 800;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow:
    0 20px 60px rgba(255,71,87,0.5),
    0 0 100px rgba(255,215,0,0.25),
    inset 0 2px 0 rgba(255,255,255,0.3);
  text-transform: uppercase;
  letter-spacing: 3px;
  position: relative;
  overflow: hidden;
  animation: ctaGlow 4s ease-in-out infinite;
  border: 2px solid rgba(255,255,255,0.3);
  text-shadow: 0 2px 10px rgba(0,0,0,0.3);
}

@keyframes ctaGlow {
  0%, 100% {
    background-position: 0% 50%;
    box-shadow: 0 20px 60px rgba(255,71,87,0.5), 0 0 100px rgba(255,215,0,0.25), inset 0 2px 0 rgba(255,255,255,0.3);
  }
  50% {
    background-position: 100% 50%;
    box-shadow: 0 25px 80px rgba(255,215,0,0.6), 0 0 120px rgba(255,71,87,0.35), inset 0 2px 0 rgba(255,255,255,0.4);
  }
}

.sf-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 300%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent, rgba(255,255,255,0.2), transparent);
  animation: ctaShimmer 3s infinite;
}

.sf-cta::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
