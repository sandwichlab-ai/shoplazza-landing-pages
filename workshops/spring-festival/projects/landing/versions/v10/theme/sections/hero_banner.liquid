{{ 'hero-banner.css' | asset_url | stylesheet_tag }}

<section class="hero-banner" data-section-id="{{ section.id }}">
  <div class="hero-banner__container">
    {% if section.settings.background_image %}
      <div class="hero-banner__background">
        <img
          src="{{ section.settings.background_image | img_url: '1920x' }}"
          alt="{{ section.settings.heading }}"
          loading="eager"
        >
      </div>
    {% endif %}

    <div class="hero-banner__content">
      {% if section.settings.subtitle %}
        <p class="hero-banner__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>

      {% if section.settings.description %}
        <p class="hero-banner__description">{{ section.settings.description }}</p>
      {% endif %}

      {% if section.settings.button_text %}
        <a
          href="{{ section.settings.button_link }}"
          class="hero-banner__button"
        >
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "hero_banner",
  "class": "section-hero-banner",
  "templates": ["index", "page"],
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "背景图片"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "副标题",
      "default": "限时优惠"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "主标题",
      "default": "发现精选好物"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "描述文案",
      "default": "探索我们精心挑选的产品系列，享受独家优惠"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字",
      "default": "立即购买"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "按钮颜色",
      "default": "#ff6b35"
    }
  ],
  "presets": [
    {
      "name": "hero_banner",
      "cname": "首屏横幅",
      "category": "landing"
    }
  ]
}
{% endschema %}
