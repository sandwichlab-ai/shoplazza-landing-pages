<style>
  .header__mobile .header{
    padding-top: 18px;
    padding-bottom: 18px;
  }
  .header__mobile .header_apps_wrap > * {
    margin-bottom: 18px;
    flex: 1;
  }
  .header__mobile .header__search-wrapper{
    padding-top: 4px;
    padding-bottom: 10px;
  }
  .header__mobile .header__menu-wrapper{
    {% if shop.locale == "ar-SA" %}
      padding: 8px 16px 8px 0;
  {% else %}
      padding: 8px 0 8px 16px;
  {% endif %}
    background: var(--color-menu-bg);
  }
  .header__mobile__menu-item-first{
    {% if shop.locale == "ar-SA" %}
      padding-left: 10px;
  {% else %}
      padding-right: 10px;
  {% endif %}
  }
  .header__mobile__menu-item-first a{
    padding: 9px 12px;
    font-size: 12px;
    line-height: 1.3;
    color: var(--color-menu-item-text-90);
    background: var(--color-menu-item-bg);
    border-radius: 4px;
  }
  .header_menu_tooltip,
  .header_menu_tooltip .i-spzhtml-tooltip-inner{
    padding: 0;
    background: transparent !important;
  }
  .header_menu_tooltip .header__menu_second {
    width: 150px;
    max-height: 236px;
    border-radius: {% if settings.edges == 'round' %}var(--global-fixed-border-radius){% else %}4px {% endif %};
  }
  .header_menu_tooltip .header__menu_second-item{
    background: var(--color-menu-item-bg);
    color: var(--color-menu-item-text-80);
    {% if shop.locale == "ar-SA" %}
      padding: 0 14px 0 0;
  {% else %}
      padding: 0 0 0 14px;
  {% endif %}
    font-size: 12px;
    line-height: 1.3
  }
  .header_menu_tooltip .header__menu_second-item a{
    {% if shop.locale == "ar-SA" %}
      padding: 15px 0 15px 14px;
  {% else %}
      padding: 15px 14px 15px 0;
  {% endif %}
  }
  .header_menu_tooltip .header__menu_second-item a + a{
    border: 1px solid #E6E6E6;
  }
  .header__mobile__menu-item-first a.header_menu_active {
    background-color: var(--color-actived-menu-item-bg) ;
    color: var(--color-actived-menu-item-text) ;
  }
</style>
<header class="header__mobile tw-text-header-text-color lg:hidden">
  <div class="header page-container z-20 relative header-bg pointer-events-auto">
    {% comment %} 插件：语言切换和货币切换 {% endcomment %}
    {%- comment -%} data-position="viewport_top" 会清掉插件的边框、字体颜色、背景和外间距 {%- endcomment -%}
    {% if mb_plugin_currency_and_translate == 'icon' %}
      <div class="header_apps_wrap flex items-center">
        {% for block in section.blocks %}
          {% if block.type contains '//apps' %}
            <div>{% render block %}</div>
            {% continue %}
          {% endif %}
        {% endfor %}
        <div
          class="empty-hidden plugin__translate-header border"
          data-position="viewport_top"
        ></div>
        <div
          class="empty-hidden plugin__currency border"
          data-position="viewport_top"
        ></div>
      </div>
    {% endif %}
    <div class="flex items-center">
      {% if template.name == 'cart' %}
        <button
          class="lg:hidden header-cart-back-btn clear flex text-inherit"
          type="button"
          @tap="SPZ.history(type='back', defaultUrl='{{routes.root_url}}');"
        >
          {% include 'icon_arrow_down_lg' %}
        </button>
      {% endif %}
      {% render 'header_logo' %}

      {% if search_style == 'icon' or shop.attrs.smart_search == 'open' %}
        {% render 'header_search', media: media %}
      {% elsif search_style == 'search_box' and md_enable_sticky %}
        {% render 'header_search',
          media: media,
          is_force_search_icon: true,
          container_id: 'header-search-container-mobile'
        %}
      {% endif %}

      {% assign is_force_menu_icon = md_enable_sticky %}
      {% if mb_menu_type == 'drawer' %}
        {% assign is_force_menu_icon = false %}
      {% endif %}
      {% render 'header_icons',
        isShowInsideSearch: false,
        is_force_menu_icon: is_force_menu_icon,
        container_id: 'header-icons'
      %}
    </div>
  </div>

  <div
    class="header__fixed-top header__scroll_hide pointer-events-auto"
    id="header-scrollable-container-mobile"
  >
    {% if md_enable_sticky %}
      {% assign needObserver = true %}
      {% if mb_menu_type == 'drawer' and search_style == 'none' %}
        {% assign needObserver = false %}
      {% elsif mb_menu_type == 'drawer' and search_style == 'icon' %}
        {% assign needObserver = false %}
      {% endif %}

      {% if needObserver %}
        <spz-observer
          @scrollDown="header-scrollable-container-mobile.toggleClass(class='non-sticky', force=true);header-search-container-mobile.toggleClass(class='show', force=true);header-icons.toggleClass(class='show-menu-icon', force=true);"
          @scrollUp="header-scrollable-container-mobile.toggleClass(class='non-sticky', force=false);header-search-container-mobile.toggleClass(class='show', force=false);header-icons.toggleClass(class='show-menu-icon', force=false);"
          layout="logic"
        ></spz-observer>
      {% endif %}
    {% endif %}
    {% if shop.attrs.smart_search != 'open'
      and search_style == 'search_box'
      and template.name != 'search'
    %}
      <div class="header__search-wrapper page-container header-bg">
        {% render 'header_search', media: media %}
      </div>
    {% endif %}
    {% if mb_menu_type == 'menu' %}
      {%- comment -%} 菜单 {%- endcomment -%}
      <div class="header__menu-wrapper relative">
        {% assign links = linklists[mobile_menu.id].links %}
        <ul
          class="header__menu hide-scrollbar flex overflow-y-hidden overflow-x-atuo m-0 p-0 list-none"
          data-scrolling="true"
        >
          {% for link in links %}
            <li class="header__menu-item header__mobile__menu-item-first flex-shrink-0">
              <a
                class="block no-underline"
                id="header_menu_md_{{link.id}}"
                {% if link.levels > 0 %}
                  @tap="header_menu_dropdown_md_{{link.id}}.open;header_menu_md_{{link.id}}.toggleClass(class='header_menu_active', force=true);"
                {% else %}
                  {% include 'link', link %}
                {% endif %}
              >
                {% if settings.type_nav_text_uppercase_on %}
                  {{ link.title | upcase }}
                {% else %}
                  {{ link.title }}
                {% endif %}
              </a>
              {%- comment -%} 移动端二级菜单 {%- endcomment -%}
              {% if link.levels > 0 %}
                {% assign second_links = linklists[link.id].links %}
                <spz-observer
                  layout="logic"
                  @scrollDown="header_menu_tooltip_md_{{link.id}}.close();"
                  @scrollUp="header_menu_tooltip_md_{{link.id}}.close();"
                ></spz-observer>
                <spz-tooltip
                  layout="logic"
                  for="header_menu_md_{{link.id}}"
                  id="header_menu_tooltip_md_{{link.id}}"
                  interact="click"
                  no-arrow
                  placement="bottomLeft"
                  overlay-class="header_menu_tooltip"
                  @close="header_menu_md_{{link.id}}.toggleClass(class='header_menu_active', force=false);"
                >
                  <ul class="header__menu_second header-shadow m-0 p-0 list-none overflow-x-hidden overflow-y-auto">
                    {% for second_link in second_links %}
                      <li class="header__menu_second-item">
                        <a
                          class="relative block no-underline text-inherit"
                          {% include 'link', link: second_link %}
                        >
                          {{ second_link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </spz-tooltip>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  </div>
  {%- comment -%} 弹窗公告插件 {%- endcomment -%}
  <div class="plugin__fixed-div pointer-events-auto"></div>
</header>
