<style>
  .overlay_text_col_heading {
    font-size: calc(var(--type-heading-font-size) * 0.53);
    margin: 0;
  }
  .overlay_blocks_container {
    display: flex;
    flex-wrap: wrap;
    margin-left: -40px;
  }
  .overlay_blocks_item {
    min-height: 500px;
    padding-left: 40px;
    margin-top: 40px;
  }
  .overlay_text_col_text_container {
    position: relative;
    z-index: 2;
    padding: 24px;
  }
  .overlay_text_col_text_container .title {
    font-size: calc(var(--type-heading-font-size) * 0.8);
    margin-bottom: 12px;
    font-weight: 600;
    margin: 0;
  }
  .overlay_text_col_btn {
    display: inline-flex;
    text-decoration: none;
    font-weight: 500;
    /* padding: 8px 16px; */
    min-width: 84px;
    min-height: 40px;
  }
  .overlay_blocks_container .placeholder-svg {
    height: 100%;
  }
  .overlay_text_col_image_outer {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
  }
  @media (max-width: {{ settings.breakpoint }}px) {
    .overlay_blocks_item {
      min-height: 220px;
      margin-top: 16px;
      width: 100% !important;
      padding-left: 0;
    }
    .overlay_text_col_heading {
      font-size: calc(var(--type-heading-font-size) * 0.8);
      margin-bottom: 8px;
    }
    .overlay_text_col_text_container {
      padding: 12px;
    }
    .overlay_blocks_container {
      margin-left: 0;
    }
  }
</style>
{% if shop.locale == 'ar-SA' %}
  <style>
    .overlay_text_col_text_container {
      text-align: right !important;
    }
  </style>
{% endif %}
{% include 'card_spacing_css' %}
<div class='page-container'>
  {% if section.settings.heading %}
    <h4 class='text-center overlay_text_col_heading'>{{ section.settings.heading }}</h4>
  {% endif %}
  <div class='overlay_blocks_container'>
    {% for block in section.blocks %}
      {% assign customIndex = forloop.index0 | minus: 1 %}
      {% assign sizeRatio = 2 %}
      {% if block.settings.width == 'full' %}
        {% assign sizeRatio = 1 %}
      {% endif %}

      <style>
        [data-section-id="{{ section.id }}"] .boxShadow_{{forloop.index}}:before {
          content: "";
          display: block;
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          background: linear-gradient(180deg, {{block.settings.color_overlay}} 0%, rgba(196, 196, 196, 0) 100%);
          z-index: 1;
          height: 200px;
        }
        [data-section-id="{{ section.id }}"] #overlay_btn_{{forloop.index}} {
          color: {{ block.settings.btn_color }};
          background-color: var(--color-primary-btn-bg);
          border: 1px solid transparent;
        }
        body[data-button-hover-animation="color_invert"] [data-section-id="{{ section.id }}"] #overlay_btn_{{forloop.index}}:hover {
          color: var(--color-primary-btn-bg);
          background-color: {{ block.settings.btn_color}};
          border: 1px solid var(--color-primary-btn-bg);
        }
      </style>
      {% assign image = block.settings.image %}
      <div class="overlay_blocks_item" style="width: {% if block.settings.width == 'full' %} 100% {% else %} calc(100% * {{block.settings.width}}) {% endif %}">
        <div class="{% if block.settings.show_overlay %} boxShadow_{{forloop.index}} {% endif %} relative h-full rounded-global overflow-hidden">
          {% include 'global_img', image: image, image_outer: 'overlay_text_col_image_outer h-full',image_class: 'h-full', current_image_class: 'h-full', ssrIndex: customIndex, sizeRatio: sizeRatio %}
          {% assign block_heading = block.settings.heading %}
          {% assign text = block.settings.text %}
          {% assign btn_text = block.settings.btn_text %}
          {% assign btn_link = block.settings.btn_link %}
          {% assign color_text = block.settings.color_text %}
          {% assign btn_color = block.settings.btn_color %}
          <div class="overlay_text_col_text_container relative" style="color: {{color_text}}">
            {% if block_heading %}
              <h4 class="title">
                {{ block_heading }}
              </h4>
            {% endif %}
            {% if text %}
              <div class="body-plus-2 lg:mb-4 md:mb-3 mce-content">
                {{ text }}
              </div>
            {% endif %}
            {% if btn_text %}
              <a
                id="overlay_btn_{{forloop.index}}"
                class="block overlay_text_col_btn justify-center items-center rounded-btn button-primary"
                {% include 'link', link: btn_link %}
              >{{ btn_text | escape }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
