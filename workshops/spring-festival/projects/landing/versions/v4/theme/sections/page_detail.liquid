  function updateCountdown() {
    const now = new Date();
    const endDate = new Date('2026-02-12T23:59:59'); // æ­£æœˆåäº”
    const diff = endDate - now;

    if (diff <= 0) {
      document.querySelectorAll('.sf-timer-num').forEach(el => el.textContent = '00');
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

    document.getElementById('sf-days').textContent = days.toString().padStart(2, '0');
    document.getElementById('sf-hours').textContent = hours.toString().padStart(2, '0');
    document.getElementById('sf-minutes').textContent = minutes.toString().padStart(2, '0');
    document.getElementById('sf-seconds').textContent = seconds.toString().padStart(2, '0');
  }

  setInterval(updateCountdown, 1000);
  updateCountdown();
</script>

