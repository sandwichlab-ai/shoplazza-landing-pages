{% include 'card_spacing_css', is_update_page_container: false %}
{% assign text_align = section.settings.text_align %}

<style>
  [data-section-id="{{ section.id }}"] .rich__wrapper.rich__wrapper_narrow {
    max-width: 330px;
  }

  [data-section-id="{{ section.id }}"] .rich_item:first-child {
    margin-top: 0;
  }

  [data-section-id="{{ section.id }}"] .rich_item:last-child {
    margin-top: 20px;
  }

  [data-section-id="{{ section.id }}"] .rich_button {
    min-width: 108px;
  }
  [data-section-id="{{ section.id }}"] .rich__wrapper {
    text-align: {{text_align}};
  }

  @media (min-width: 960px) {
    [data-section-id="{{ section.id }}"] .rich__wrapper {
      max-width: 680px;
    }

    [data-section-id="{{ section.id }}"] .rich__wrapper.rich__wrapper_narrow {
      max-width: 570px;
    }
  }
</style>

<div class="rich__wrapper {% if section.settings.narrow_column %} rich__wrapper_narrow {% endif %} my-0 mx-auto px-4 lg:px-10">
  {% for item in section.blocks %}
    {% if item.type == "rich_head" and item.settings.heading %}
      <h4 {{item.shoplaza_attributes}} class="mt-3 rich_item m-0 title-font leading-1.2 type-heading-font-family">{{ item.settings.heading | escape }}</h4>
    {% endif %}
    {% if item.type == "rich_text" and item.settings.text %}
      <div {{item.shoplaza_attributes}} class="mt-3 rich_item leading-1.3 {% if item.settings.enlarge_text %}body-plus-4{% else %}body-plus-2{% endif %}">{{ item.settings.text | escape }}</div>
    {% endif %}
    {% if item.type == "rich_button" and item.settings.button_text %}
      <a
        {{item.shoplaza_attributes}}
        class="rich_button mt-3 rich_item inline-block py-2 px-6 body-plus-2 leading-1.5 no-underline button-primary rounded-btn"
        {% include 'link', link: item.settings.link  %}
      >{{ item.settings.button_text | escape }}</a>
    {% endif %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "rich_text",
  "max_blocks": 3,
  "settings": [
    {
      "type": "select",
      "id": "text_align",
      "label": {
        "en-US": "Text alignment",
        "zh-CN": "文字对齐"
      },
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": {
            "en-US": "Text left",
            "zh-CN": "居左"
          }
        },
        {
          "value": "center",
          "label": {
            "en-US": "Text centered",
            "zh-CN": "居中"
          }
        },
        {
          "value": "right",
          "label": {
            "en-US": "Text right",
            "zh-CN": "居右"
          }
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "narrow_column",
      "label": {
        "en-US": "Narrow column",
        "zh-CN": "开启窄栏"
      },
      "default": true
    },
    {
      "type": "spacing",
      "id": "spacing",
      "label": {
        "en-US": "Spacing",
        "zh-CN": "间距留白"
      },
      "pc": {
        "top": "40",
        "right": "",
        "bottom": "40",
        "left": ""
      },
      "mobile": {
        "top": "20",
        "right": "",
        "bottom": "20",
        "left": ""
      },
      "default": {
        "pc": {
          "top": "40",
          "right": "",
          "bottom": "40",
          "left": ""
        },
        "mobile": {
          "top": "20",
          "right": "",
          "bottom": "20",
          "left": ""
        }
      }
    }
  ],
  "blocks": [
    {
      "type": "rich_head",
      "name": {
        "zh-CN": "标题",
        "en-US": "Heading"
      },
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": {
            "zh-CN": "标题",
            "en-US": "Heading"
          },
          "default": "Rich text"
        }
      ]
    },
    {
      "type": "rich_text",
      "name": {
        "zh-CN": "文字",
        "en-US": "Text"
      },
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": {
            "zh-CN": "文字",
            "en-US": "Text"
          },
          "default": "A sentence or two introducing your brand, what you sell, and what makes your brand compelling to customers."
        },
        {
          "type": "checkbox",
          "id": "enlarge_text",
          "label": {
            "en-US": "Enlarge text",
            "zh-CN": "开启更大文字"
          },
          "default": true
        }
      ]
    },
    {
      "type": "rich_button",
      "name": {
        "zh-CN": "按钮",
        "en-US": "Button"
      },
      "limit": 1,
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": {
            "en-US": "Button link",
            "zh-CN": "按钮链接"
          }
        },
        {
          "type": "text",
          "id": "button_text",
          "label": {
            "en-US": "Button text",
            "zh-CN": "按钮文字"
          },
          "default": "Buy now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "rich_text",
      "cname": {
        "en-US": "Rich text",
        "zh-CN": "富文本"
      },
      "category": {
        "zh-CN": "文字",
        "en-US": "Text"
      },
      "ccategory": {
        "zh-CN": "文字",
        "en-US": "Text"
      },
      "display": true,
      "blocks": [
        {
          "type": "rich_head",
          "settings": {
            "heading": "Rich text"
          }
        },
        {
          "type": "rich_text",
          "settings": {
            "text": "A sentence or two introducing your brand, what you sell, and what makes your brand compelling to customers.",
            "enlarge_text": true
          }
        },
        {
          "type": "rich_button",
          "settings": {
            "link": "",
            "button_text": "Buy now"
          }
        }
      ]
    }
  ]
}
{% endschema %}