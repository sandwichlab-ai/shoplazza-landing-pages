          </div>
        </div>
      </div>
    `;
  }

  // Render products list (async - fetches from API)
  async function renderProducts() {
    await fetchProducts(currentCategory, currentPage, pageSize);

    if (products.length === 0) {
      document.getElementById('sf-products-grid').innerHTML = '<div style="grid-column: 1/-1; text-align: center; padding: 60px; color: rgba(255,255,255,0.6);">No products found</div>';
      document.getElementById('sf-pagination').innerHTML = '';
      return;
    }

    document.getElementById('sf-products-grid').innerHTML = products.map(renderProductCard).join('');
    renderPagination(pagination.totalPages, pagination.total);
  }

  // Render pagination
  function renderPagination(totalPages, total) {
    if (totalPages <= 1) {
      document.getElementById('sf-pagination').innerHTML = '';
      return;
    }

    let html = `<button class="sf-page-btn nav" onclick="goToPage(${currentPage - 1})" ${currentPage === 1 ? 'disabled' : ''}>‚Äπ Prev</button>`;

    for (let i = 1; i <= totalPages; i++) {
      if (i === 1 || i === totalPages || Math.abs(i - currentPage) <= 1) {
        html += `<button class="sf-page-btn ${i === currentPage ? 'active' : ''}" onclick="goToPage(${i})">${i}</button>`;
      } else if (Math.abs(i - currentPage) === 2) {
        html += `<span class="sf-page-btn" style="cursor:default">...</span>`;
      }
    }

    html += `<span class="sf-page-info">${total} items</span>`;
    html += `<button class="sf-page-btn nav" onclick="goToPage(${currentPage + 1})" ${currentPage === totalPages ? 'disabled' : ''}>Next ‚Ä∫</button>`;

    document.getElementById('sf-pagination').innerHTML = html;
  }

  // Go to page (async)
  async function goToPage(page) {
