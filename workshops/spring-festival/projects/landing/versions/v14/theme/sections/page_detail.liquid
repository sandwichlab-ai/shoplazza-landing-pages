  // ========== URL Parameter Routing ==========
  function getUrlParam(param) {
    const urlParams = new URLSearchParams(window.location.search);
    return urlParams.get(param);
  }

  function getCurrentUrl() {
    return window.location.pathname;
  }

  // Navigate to product detail (updates URL)
  function navigateToProduct(productId) {
    const url = new URL(window.location);
    url.searchParams.set('id', productId);
    window.history.pushState({ productId }, '', url);
    showProductDetail(productId);
  }

  // Navigate back to list (removes id param)
  function navigateToList() {
    const url = new URL(window.location);
    url.searchParams.delete('id');
    window.history.pushState({}, '', url);
    showProductList();
  }

  // Handle browser back/forward
  window.addEventListener('popstate', function(e) {
    const productId = getUrlParam('id');
    if (productId) {
      showProductDetail(parseInt(productId));
    } else {
      showProductList();
    }
  });

  // Show product list view
  async function showProductList() {
    document.querySelector('.sf-landing').classList.remove('detail-mode');
    document.getElementById('sf-detail-page').classList.remove('active');
    await renderProducts();
  }

  // Show product detail view (async - fetches from API)
  async function showProductDetail(productId) {
    // Show loading state
    document.querySelector('.sf-landing').classList.add('detail-mode');
    document.getElementById('sf-detail-page').classList.add('active');
    document.getElementById('sf-breadcrumb-name').textContent = 'Loading...';
    document.getElementById('sf-detail-container').innerHTML = '<div style="text-align: center; padding: 100px; color: rgba(255,255,255,0.6);">Loading product details...</div>';

    // Fetch product from API
    const product = await fetchProductById(productId);

    if (!product) {
      console.error('Product not found:', productId);
      await showProductList();
      return;
    }

    document.getElementById('sf-breadcrumb-name').textContent = product.name;
    document.getElementById('sf-detail-container').innerHTML = renderFullPageDetail(product);
    window.scrollTo(0, 0);
  }

  // Countdown timer - Lunar New Year Sale
  function updateCountdown() {
    const now = new Date();
    const endDate = new Date('2026-02-12T23:59:59');
    const diff = endDate - now;

    if (diff <= 0) {
      document.querySelectorAll('.sf-timer-num').forEach(el => el.textContent = '00');
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

    document.getElementById('sf-days').textContent = days.toString().padStart(2, '0');
    document.getElementById('sf-hours').textContent = hours.toString().padStart(2, '0');
    document.getElementById('sf-minutes').textContent = minutes.toString().padStart(2, '0');
    document.getElementById('sf-seconds').textContent = seconds.toString().padStart(2, '0');
  }

  setInterval(updateCountdown, 1000);
  updateCountdown();

  // ========== API Configuration ==========
  const API_BASE = 'https://api.dev-us.sandwichlab.ai/hello/public/api/v1';

  // Product data (loaded from API)
  let products = [];
  let pagination = { page: 1, limit: 8, total: 0, totalPages: 0 };
  let isLoading = false;

  // Fetch products from API
  async function fetchProducts(category = 'all', page = 1, limit = 8) {
    isLoading = true;
    showLoadingState();

    try {
      const categoryParam = category === 'all' ? '' : `&category=${category}`;
      const url = `${API_BASE}/products?page=${page}&limit=${limit}${categoryParam}`;
      console.log('Fetching products from:', url);

      const response = await fetch(url);
      const result = await response.json();

      if (result.success && result.data) {
        products = result.data.products || [];
        pagination = result.data.pagination || { page: 1, limit: 8, total: 0, totalPages: 0 };
        console.log('Loaded', products.length, 'products, total:', pagination.total);
      } else {
        console.error('API error:', result);
        products = [];
      }
    } catch (error) {
      console.error('Failed to fetch products:', error);
      products = [];
    }

    isLoading = false;
    hideLoadingState();
    return products;
  }

  // Fetch single product by ID
  async function fetchProductById(id) {
    try {
      const url = `${API_BASE}/products/${id}`;
      console.log('Fetching product:', url);

      const response = await fetch(url);
      const result = await response.json();

      if (result.success && result.data) {
        return result.data;
      }
    } catch (error) {
      console.error('Failed to fetch product:', error);
    }
    return null;
  }

  // Loading state UI
  function showLoadingState() {
    const grid = document.getElementById('sf-products-grid');
