<style>
  .order_verify_title {
    font-size: 28px;
  }
  .order_verify_container {
    width: calc(420px + var(--page-spacing) * 2);
    padding-top: 116px;
    padding-bottom: 120px;
  }
  .form_item_group_code {
    display: grid;
    grid-template-columns: 3fr 1fr;
    gap: 0 20px;
    width: 100%;
  }
  .send_code {
    border: 1px solid rgba(230,230,230);
    background: #fff;
    color: rgba(159,159,159);
    height: 52px;
  }
  .order_verify_link {
    text-decoration: none;
    color: var(--color-body-text);
  }
  .order_verify_link:hover {
    text-decoration: underline;
  }
  .form_input.valid[name="email"] ~ .form_item_group_code .form_item #order-history-send-btn{
    font-weight: bold;
    text-align: center;
    border: 1px solid transparent !important;
    color: var(--color-primary-btn-text) !important;
    border-radius: var(--btn-border-radius) !important;
    background-color: var(--color-primary-btn-bg) !important;
    transition: all .3s cubic-bezier(.4, 0, .2, 1);
    cursor: pointer;
  }
  .order_verify_code_select {
    border: none;
    width: 20px;
  }
  .order_verify_flag {
    border-right: 1px solid rgba(230,230,230);
    width: 40px;
    height: 25px;
  }
  .order_verify_flag_container {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
  }
  .email_or_phone_tip.visible ~ .order_verify_flag_container {
    top: 30%;
  }
  .order_verify_title_sub {
    font-size: 14px;
    font-weight: 600;
  }
  .order_verify_title_sub_email {
    font-size: 20px;
    font-weight: 600;
  }
  .form_item_group_phone {
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: 0 20px;
    width: 100%;
  }
  @media (max-width: {{settings.breakpoint}}px) {
    .order_verify_container {
      width: 100%;
      padding: 36px 32px 0;
    }
  } 
</style>

{% if shop.locale == 'ar-SA' %}
  <style>
    .order_verify_flag_container {
      right: unset;
      left: 15px;
    }
  </style>
{% endif %}
