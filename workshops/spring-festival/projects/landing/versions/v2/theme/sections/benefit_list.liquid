{{ 'benefit-list.css' | asset_url | stylesheet_tag }}

<section class="benefit-list" data-section-id="{{ section.id }}">
  <div class="benefit-list__container">
    {% if section.settings.heading %}
      <h2 class="benefit-list__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="benefit-list__grid">
      {% for block in section.blocks %}
        <div class="benefit-list__item" {{ block.shopify_attributes }}>
          {% if block.settings.icon %}
            <div class="benefit-list__icon">
              <img src="{{ block.settings.icon | img_url: '64x64' }}" alt="{{ block.settings.title }}">
            </div>
          {% else %}
            <div class="benefit-list__icon benefit-list__icon--default">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22,4 12,14.01 9,11.01"></polyline>
              </svg>
            </div>
          {% endif %}

          <h3 class="benefit-list__title">{{ block.settings.title }}</h3>

          {% if block.settings.description %}
            <p class="benefit-list__description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "benefit_list",
  "class": "section-benefit-list",
  "templates": ["index", "page"],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "标题",
      "default": "为什么选择我们"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#f8f9fa"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "卖点",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "图标"
        },
        {
          "type": "text",
          "id": "title",
          "label": "标题",
          "default": "免费配送"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "描述",
          "default": "订单满99元免费配送"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "benefit_list",
      "cname": "卖点列表",
      "category": "landing",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "title": "品质保证",
            "description": "所有产品均经过严格品控"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "title": "极速发货",
            "description": "下单后24小时内发货"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "title": "无忧退换",
            "description": "7天无理由退换货"
          }
        }
      ]
    }
  ]
}
{% endschema %}
