{{ 'footer-cta.css' | asset_url | stylesheet_tag }}

<section class="footer-cta" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.background_color }};">
  <div class="footer-cta__container">
    <div class="footer-cta__content">
      {% if section.settings.heading %}
        <h2 class="footer-cta__heading" style="color: {{ section.settings.text_color }};">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description %}
        <p class="footer-cta__description" style="color: {{ section.settings.text_color }};">
          {{ section.settings.description }}
        </p>
      {% endif %}

      <div class="footer-cta__buttons">
        {% if section.settings.primary_button_text %}
          <a
            href="{{ section.settings.primary_button_link }}"
            class="footer-cta__button footer-cta__button--primary"
            style="background-color: {{ section.settings.button_color }};"
          >
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text %}
          <a
            href="{{ section.settings.secondary_button_link }}"
            class="footer-cta__button footer-cta__button--secondary"
            style="border-color: {{ section.settings.text_color }}; color: {{ section.settings.text_color }};"
          >
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.show_urgency %}
        <div class="footer-cta__urgency">
          <span class="footer-cta__urgency-icon">⏰</span>
          <span>{{ section.settings.urgency_text }}</span>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "footer_cta",
  "class": "section-footer-cta",
  "templates": ["index", "page"],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "标题",
      "default": "准备好开始了吗？"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "描述",
      "default": "立即下单，享受专属优惠，开启品质生活"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "主按钮文字",
      "default": "立即购买"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "主按钮链接"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "次按钮文字",
      "default": "了解更多"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "次按钮链接"
    },
    {
      "type": "checkbox",
      "id": "show_urgency",
      "label": "显示紧迫感提示",
      "default": true
    },
    {
      "type": "text",
      "id": "urgency_text",
      "label": "紧迫感文案",
      "default": "限时优惠，仅剩最后 24 小时"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "按钮颜色",
      "default": "#ff6b35"
    }
  ],
  "presets": [
    {
      "name": "footer_cta",
      "cname": "底部转化区",
      "category": "landing"
    }
  ]
}
{% endschema %}
